{
  "name": "api",
  "version": "0.0.1",
  "description": "SPS api",
  "author": "Maciej FrÄ…tczak",
  "private": true,
  "license": "MIT",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "doppler run -- nest start --watch",
    "start:debug": "doppler run -- nest start --debug --watch",
    "start:prod": "doppler run -- node dist/main.js",
    "start:migrate:prod": "doppler run -- yarn prisma migrate deploy && yarn start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:docker:up": "docker-compose -f test/docker-compose.yml up -d",
    "test:docker:down": "docker-compose -f test/docker-compose.yml down",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "4.0.0",
    "@types/passport-jwt": "^3.0.6",
    "aws-sdk": "^2.973.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "csrf": "^3.1.0",
    "dotenv": "^16.0.1",
    "google-auth-library": "^8.3.0",
    "handlebars": "^4.7.7",
    "luxon": "^3.0.4",
    "mailgun.js": "^8.0.0",
    "nestjs-i18n": "^9.1.5",
    "node-fetch": "2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rrule": "^2.7.1",
    "rxjs": "^7.2.0",
    "sharp": "^0.30.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/luxon": "^3.0.2",
    "@types/node": "^16.0.0",
    "@types/node-fetch": "^2.6.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "prisma": "^4.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!main.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/*.command.(t|j)s",
      "!**/*.guard.(t|j)s",
      "!**/*.decorator.(t|j)s",
      "!**/*.read-model.(t|j)s",
      "!**/*.exception.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      "interfaces",
      "jestGlobalMocks.ts",
      ".module.ts",
      "<rootDir>/src/main.ts",
      ".mock.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
