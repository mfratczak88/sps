generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id                 String              @id
  name               String
  email              String
  password           String?
  active             Boolean
  refreshToken       String?
  registrationMethod RegistrationMethod
  role               Role                @default(driver)
  registrationToken  RegistrationToken[]
  vehicles           Vehicle[]
  parkingLots        ParkingLot[]
}

model RegistrationToken {
  id             String @id
  userId         String
  activationGuid String
  guidValidTo    String
  user           User   @relation(fields: [userId], references: [id])
}

enum RegistrationMethod {
  manual
  google
}

enum Role {
  admin
  clerk
  driver
}

model Vehicle {
  licensePlate String        @id
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  reservations Reservation[]
}

model ParkingLot {
  id           String        @id
  createdAt    DateTime      @default(now())
  city         String
  streetName   String
  streetNumber String
  capacity     Int
  hourFrom     String
  hourTo       String
  users        User[]
  reservations Reservation[]
}

enum ReservationStatus {
  Draft
  Cancelled
  Confirmed
}

model Reservation {
  id            String            @id
  createdAt     DateTime          @default(now())
  licensePlate  String
  vehicle       Vehicle           @relation(fields: [licensePlate], references: [licensePlate])
  parkingLotId  String
  parkingLot    ParkingLot        @relation(fields: [parkingLotId], references: [id])
  startTime     DateTime          @db.Timestamp(0)
  endTime       DateTime          @db.Timestamp(0)
  status        ReservationStatus
  parkingTickets ParkingTicket[]
}

model ParkingTicket {
  id            String      @id
  reservationId String
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  timeOfEntry   DateTime    @db.Timestamp(0)
  validTo       DateTime    @db.Timestamp(0)
  timeOfLeave   DateTime?    @db.Timestamp(0)
}
